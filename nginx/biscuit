upstream biscuit_app_server {
  server unix:/home/<user>/biscuit_index/biscuit_index.sock fail_timeout=0;
}


server {
    listen 443 ssl;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/biscuitindex.codeforkenya.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/biscuitindex.codeforkenya.org/privkey.pem;

    server_name biscuitindex.codeforkenya.org;
    client_max_body_size 4G;

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    location /static/ {
        alias   /home/<user>/biscuit_index/_static;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://biscuit_app_server;
            break;
        }
    }
}


server {
    listen 80;
    server_name biscuitindex.codeforkenya.org;
    return 301 https://biscuitindex.codeforkenya.org$request_uri;
}
